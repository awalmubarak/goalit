<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/robotoslab_regular</item>

    </style>

    <style name="WelcomeStyle" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/robotoslab_regular</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/robotoslab_regular</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/robotoslab_regular</item>
    </style>

    <!--Toolbar font style-->
    <style name="TolBarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/robotoslab_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <!--TabLayout font style-->
    <style name="TabTextStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/tabInActive</item>
    </style>

</resources>
