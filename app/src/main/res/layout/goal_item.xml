<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/taskItemMargins"
    android:layout_marginBottom="@dimen/taskItemMargins"
    android:layout_marginStart="@dimen/rootViewMargin"
    android:layout_marginEnd="@dimen/rootViewMargin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/goalTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/goalTitleSize"
            android:layout_margin="@dimen/taskItemMargins"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/goalTitle"
            tools:text="Perhaps not the answer you are wanting, but you can probably " />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>